.row
  .col-md-4
  .col-md-4
    .login-form
      %center
        %h2 Sign up
      = simple_form_for resource, url: registration_path(resource_name) do |f|
        = f.input :email
        = f.input :password, as: :password, input_html: {autocomplete: "off"}
        = f.input :password_confirmation, as: :password, input_html: {autocomplete: "off"}
        = f.button :submit, "Sign Up"

      = render "devise/shared/links"
