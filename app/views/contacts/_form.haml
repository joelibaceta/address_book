.modal-dialog
  .modal-content
    .modal-header
      %button(type="button" class="close" data-dismiss="modal" aria-label="Close") 
      %h4(class="modal-title")Modal title  
    .modal-body
      #contact-form
        = simple_form_for(@contact, remote: true, html: { class: 'form-horizontal' }) do |f|
          %fieldset
            = f.input :first_name
            = f.input :last_name
            = f.input :email
            = f.input :address
            = f.input :phone
            = f.input :avatar
            = f.input :user_id, as: :hidden, input_html: {value: "#{current_user.id}"} 
            = f.button :submit